
<section id="hours" class="bg-light-gray">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading">Hours &amp; Service Area</h2>
			</div>
			<div class="col-md-6">
                {{#each hoursReviews.open}}
                    <p><span class="bold">{{day}}</span> from {{open}} to {{close}}</p>
                {{/each}}
			</div>
            <div class="col-md-6">
				<iframe src="https://www.google.com/maps/d/embed?mid=1h2MQelg2XD5jQQ8vzfZLJ536q3I" style="width: 100%; height: 400px;">
                </iframe>
			</div>
		</div>
	</div>
</section>
