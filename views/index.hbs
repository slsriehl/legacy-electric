<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Hours &amp; Reviews</h2>
            <h3>provided by Yelp</h3>
        </div>
                
        <div class="col-md-6">
            <h3>Hours</h3>
            {{#each data.open}}
                <p><span class="bold">{{day}}</span> from {{open}} to {{close}}</p>
            {{/each}}
            <iframe src="https://www.google.com/maps/d/embed?mid=1h2MQelg2XD5jQQ8vzfZLJ536q3I" style="width: 100%; height: 400px;"></iframe>
        </div>
        <div class="col-md-6">
             <h3>Reviews</h3>
             <h4>Overall Rating: {{data.rating}} of 5 {{#each data.ratingArr}}<i class="fa fa-star"></i> {{/each}}</h4>
             <h4>3 of {{data.noRevs}} Yelp reviews</h4>
             <h4><a href="{{data.url}}" target="_blank">View all reviews</a></h4>
             {{#each data.reviews}}
             <div class="review">
                <div class="review-img">
                    {{#if user.image_url}}
                    <img src="{{user.image_url}}" alt="picture of {{user.name}}" />
                    {{/if}}
                </div>
                <div>
                    <h4>{{user.name}} said:</h4>
                    <p>{{time_created}}</p>
                    <p>Rating: {{rating}} {{#each ratingArr}}<i class="fa fa-star"></i> {{/each}}</p>
                    <p>{{text}}</p>
                    <p><a href="{{url}}" target="_blank">View full review on Yelp</a></p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>